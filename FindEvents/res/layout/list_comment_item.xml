<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/list_comment_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="#aaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/list_comment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="test"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttesttest"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/list_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="2014-05-21"
                android:textColor="#333"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/list_comment_comment"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:background="#aaa"
                android:visibility="gone" />

            <Button
                android:id="@+id/list_comment_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:layout_toLeftOf="@id/list_comment_comment"
                android:background="#a0a"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
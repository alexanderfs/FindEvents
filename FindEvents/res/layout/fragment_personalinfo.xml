<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/fgt_personal_bg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#aaa" >
            
            <LinearLayout 
                android:id="@+id/fgt_personal_unlog"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <Button 
                    android:id="@+id/fgt_personal_login"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:text="登录"/>
                <Button 
                    android:id="@+id/fgt_personal_register"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:padding="4dp"
                    android:text="注册"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fgt_personal_logged"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/fgt_personal_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="8dp"
                    android:src="#eee" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fgt_personal_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text="DEFAULT NAME"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/fgt_personal_signature"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="4dp"
                        android:text="DEFAULT SIGNATURE"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout 
            android:id="@+id/fgt_personal_funclist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp">
            <TextView 
                android:id="@+id/fgt_personal_homepage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的主页"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_publish"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的发布"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_collect"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的收藏"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_share"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的分享"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_contactbook"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的好友"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_group"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的群组"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
            <TextView 
                android:id="@+id/fgt_personal_spots"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="我的位置"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:background="#aaa"
                android:layout_margin="2dp"
                android:paddingLeft="4dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/act_friendinfo_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp">
            <TextView 
                android:id="@+id/act_friendinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="鑫鑫"/>
            <TextView 
                android:id="@+id/act_friendinfo_id"
                android:layout_below="@id/act_friendinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="xinxin001"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="地区: "/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_friendinfo_location"
            android:text="北京市 海淀区"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="个性签名: "/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/act_friendinfo_signature"
            android:text="不是假发，是桂！"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView 
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="个人相册: "/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="#aaa"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button 
        android:id="@+id/act_friendinfo_mainpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看主页"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />
    <Button 
        android:id="@+id/act_friendinfo_addfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加为好友"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
